# Use a specific version of Ubuntu LTS as base
FROM ubuntu:22.04

# Set non-interactive frontend for apt-get and SSH
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    ca-certificates \
    curl \
    git \
    make \
    openssh-client \
    python3 \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Set working directory to the project root
WORKDIR /app

# Copy the entire project
COPY . .

# Copy requirements files if they exist
COPY requirements*.txt ./

# Install the package in development mode with test dependencies
RUN if [ -f "setup.py" ]; then \
        pip install --no-cache-dir -e .[test]; \
    elif [ -f "pyproject.toml" ]; then \
        pip install --no-cache-dir -e ".[test]"; \
    else \
        echo "No setup.py or pyproject.toml found. Installing test requirements directly."; \
        pip install --no-cache-dir pytest pytest-cov pytest-mqtt pytest-httpbin; \
    fi

# Set the working directory to tests for running the tests
WORKDIR /app/tests

# Set the entrypoint
ENTRYPOINT ["/app/tests/run_tests.sh"]

# Default command (can be overridden)
CMD ["-t", "all"]
