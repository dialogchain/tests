# Use a specific version of Ubuntu LTS as base
FROM ubuntu:22.04

# Set non-interactive frontend for apt-get
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app/python

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    ca-certificates \
    curl \
    git \
    make \
    python3 \
    python3-pip \
    python3-venv \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user and set up directories
RUN useradd -m appuser && \
    mkdir -p /app && \
    chown -R appuser:appuser /app

# Switch to non-root user
USER appuser

# Set working directory
WORKDIR /app

# Copy the Python project files
COPY --chown=appuser:appuser . /app/

# Install the package in development mode with test dependencies
WORKDIR /app/python

# First install the package in development mode
RUN pip install --no-cache-dir -e .

# Then install test dependencies
RUN pip install --no-cache-dir pytest pytest-cov pytest-mqtt pytest-httpbin

# Set the working directory back to /app
WORKDIR /app

# Set the entrypoint to run tests
ENTRYPOINT ["/app/tests/run_tests.sh"]

# Default command (can be overridden)
CMD ["-t", "all"]
